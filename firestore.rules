
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }
    match /users/{userId}/following/{targetId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /posts/{postId} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.sellerId;
    }
     match /posts/{postId}/likes/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }
    match /posts/{postId}/comments/{commentId} {
      allow read;
      allow create: if request.auth != null;
    }
    match /inquiries/{inquiryId} {
        allow read, write: if request.auth.uid != null; // Further rules needed for production
    }
     match /executiveChats/{userId} {
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
     match /orders/{orderId} {
      allow read, write: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
     match /notifications/{notificationId} {
      // Admins can read all. Users can only read their own.
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                  || resource.data.userId == request.auth.uid;
      // Only admins can create/write.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /bankAccounts/{accountId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, delete: if request.auth.uid == resource.data.userId;
      // Admins have special access if needed, e.g., for verification.
      // allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
