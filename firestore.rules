
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requested user ID matches the authenticated user's ID.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper function to check if the user has an 'admin' role.
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to enforce a single login session.
    // It checks if the token's "issued at" time is not before the last recorded login time in Firestore.
    // This prevents older sessions from making requests. A 5-second grace period is added.
    function isLatestSession(userId) {
      return request.auth.token.iat >= get(/databases/$(database)/documents/users/$(userId)).data.lastLogin.seconds - 5;
    }

    /**
     * @description Enforces access control for individual user documents.
     * @path /users/{userId}
     */
    match /users/{userId} {
      // A user can create their own document if the userId matches their auth.uid
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;

      // An admin can read any user document. A regular user can only read their own document
      // if they are using their latest login session.
      allow read: if isAdmin() || (isOwner(userId) && isLatestSession(userId));
      
      // A user can update their own document, but only from their latest login session.
      // This also allows the 'updateLastLogin' Cloud Function to update the lastLogin field.
      allow update: if (isOwner(userId) && isLatestSession(userId)) || 
                     (request.auth.uid == userId && request.resource.data.keys().hasOnly(['lastLogin']));

      // A user can delete their own document from their latest session.
      allow delete: if isOwner(userId) && isLatestSession(userId);

      // Only admins can list multiple user documents.
      allow list: if isAdmin();

      /**
       * @description Enforces access control for a seller's orders subcollection.
       */
      match /orders/{orderId} {
        // Only the seller (owner of the user document) or an admin can manage orders in this subcollection.
        allow read, write: if isOwner(userId) || isAdmin();
      }

      /**
       * @description Enforces access control for a seller's products subcollection.
       */
      match /products/{productId} {
          // Products are publicly readable.
          allow read, list: if true;

          // Only the owner of the user document (the seller) can create, update, or delete their own products.
          // Role check ensures only sellers can perform these actions.
          allow create, update, delete: if isOwner(userId) && get(/databases/$(database)/documents/users/$(userId)).data.role == 'seller';
      }
    }

    /**
     * @description Enforces access control for the orders collection.
     */
    match /orders/{orderId} {
      // Users can create orders for themselves from their latest session.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid && isLatestSession(request.auth.uid);

      // A user can read an order if they are the customer or the seller (from latest session), OR an admin.
      allow get: if (isSignedIn() && (
                      (resource.data.userId == request.auth.uid && isLatestSession(request.auth.uid)) || 
                      (resource.data.sellerId == request.auth.uid && isLatestSession(request.auth.uid))
                   )) || isAdmin();
      
      // Customers and sellers can query their own orders from their latest session.
      // Admins can list all orders.
      allow list: if (isSignedIn() && 
                    (isLatestSession(request.auth.uid) && (request.query.where.userId == request.auth.uid || 
                     (request.query.where.sellerId != null && request.query.where.sellerId == request.auth.uid)))) || isAdmin();

      // Only an admin can update or delete orders directly.
      allow update, delete: if isAdmin();
    }
    
    /**
     * @description Enforces access control for payout requests.
     */
    match /payouts/{payoutId} {
        // A user can create a payout request for themselves from their latest session.
        allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid && isLatestSession(request.auth.uid);
        // Admins can read, update (approve/deny), and delete payout requests.
        allow read, update, delete: if isAdmin();
        // Sellers can read their own payout requests from their latest session.
        allow list: if isSignedIn() && request.query.where.sellerId == request.auth.uid && isLatestSession(request.auth.uid);
    }
  }
}
