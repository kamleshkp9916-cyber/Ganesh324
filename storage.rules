
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if the user has an 'admin' role.
    function isAdmin() {
      return request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user has a 'seller' role.
    function isSeller(userId) {
        return request.auth != null && get(/databases/(default)/documents/users/$(userId)).data.role == 'seller';
    }

    // Avatars: Logged-in users can write to their own avatar path. Public read.
    match /profile-pictures/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Product media: Public read. Only the seller who owns the directory can write.
    // This rule allows a seller to write files inside a folder named after their user ID.
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && isSeller(userId);
    }

    // Posts media: only the authenticated user may write into their own folder. Public read.
    match /posts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Seller documents (e.g. KYC): Only the user can read/write their own documents.
    match /seller-documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: allow all reads, but deny all other writes.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
