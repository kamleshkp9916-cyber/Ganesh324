
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatars (one file per user)
    match /avatars/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Product media: sellers can only write to their own folder.
    // The rule now also checks that the user has the 'seller' role in Firestore.
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && get(/databases/(default)/documents/users/$(userId)).data.role == 'seller';
    }

    // Posts media: only the authenticated user may write into their own folder
    match /posts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Seller documents (e.g. KYC)
    match /seller-documents/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: deny all other writes
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}

